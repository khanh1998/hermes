generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clan {
  id Int @default(autoincrement()) @id
  domain String
  name String
  chief User? @relation(fields: [chiefId], references: [id], "Chief")
  chiefId Int
  members User[]
}

model User {
  id Int @default(autoincrement()) @id
  username String @unique
  password String
  fullname String
  clans Clan[]
  foundedClans Clan[] @relation("Chief")
}